{
  "manifest_version": 3,
  "name": "Intentio",
  "version": "1.0.0",
  "description": "Helps you focus.", 
  "action": {
      "default_popup": "js/index.html"
  }, 
  "background": {
    "service_worker": "js/serviceWorker.js"
  }, 
  "permissions": [
      "tabs", 
      "activeTab", 
      "storage", 
      "scripting"
  ], 
  "host_permissions": [
    "<all_urls>"
  ], 
  "web_accessible_resources": [
      {
          "resources": ["settings.html"],
          "matches": ["<all_urls>"]
      }
  ]
}